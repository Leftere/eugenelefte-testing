<picture>
  {% if srcSmall %}
    <source srcset="{{ srcSmall }}" media="{{ media|default("(max-width: 799px)") }}">
    <source srcset="{{ src }}" media="{{ mediaLarge|default("(min-width: 800px)") }}">
  {% endif %}

  <img
    src="{{ src }}"
    alt="{{ alt }}"
    loading="lazy"
    {% if height %}height="{{ height }}"{% endif %}
    {% if width %}width="{{ width }}"{% endif %}
  >
</picture>